<Window x:Class="WindowsOefening.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsOefening"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Login">
            <StackPanel HorizontalAlignment="Center" Width="300">
                <Label Content="Wachtwoord:" Margin="10"/>
                <PasswordBox x:Name="passwordTextBox" Padding="10" Margin="10" PasswordChanged="OnPassword_Changed" />
                <Button Content="Show Password" Padding="10" Margin="10" Click="OnShowPassword_Clicked"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="About">
            
        </TabItem>
    </TabControl>
</Window>
